<div class="dialog">
    <div class="dialog__img">
        <img src="{{image}}" width="1080" height="1080" alt="Аватар пользователя" class="dialog__avatar">
    </div>
    <div class="dialog__content">
        <div class="dialog__name">
            <p>{{name}}</p>
        </div>
        <div class="dialog__message">
            <p>{{message}}</p>
        </div>
    </div>
    <div class="dialog__info">
        <p>{{lastUpdate}}</p>
        <div class="dialog__counter">
            <div class="dialog__cycle">{{countMessages}}</div>

        </div>
    </div>
</div>
